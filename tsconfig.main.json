{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"],
    "strictPropertyInitialization": false
  },
  "include": ["src/main/**/*", "src/types/**/*", "src/preload/**/*"],
  "exclude": ["node_modules", "dist", "src/renderer"]
}
