{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "types": ["node"]
  },
  "include": ["src/renderer/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "src/main", "src/preload"]
}