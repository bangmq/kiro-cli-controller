{
  "name": "kirodesk",
  "version": "1.0.0",
  "description": "Kiro CLI Multi-Project Controller",
  "author": "AWS",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.main.json && npm run build:css && npm run build:renderer && npm run copy-assets",
    "build:css": "npx tailwindcss -i ./src/renderer/styles.css -o ./dist/renderer/styles.css",
    "build:renderer": "npx esbuild src/renderer/app.tsx --bundle --outfile=dist/renderer/app.js --platform=browser --external:electron",
    "copy-assets": "node -e \"require('fs').copyFileSync('src/renderer/index.html', 'dist/renderer/index.html')\"",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "package": "npm run build && electron-builder --publish never",
    "package:mac": "npm run build && electron-builder --mac --publish never",
    "package:win": "npm run build && electron-builder --win --publish never"
  },
  "build": {
    "appId": "com.aws.kirodesk",
    "productName": "KiroDesk",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/node-pty/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "esbuild": "^0.19.12",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "fs-extra": "^11.2.0",
    "node-pty": "^1.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-markdown": "^9.0.0",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "@esbuild/win32-x64": "^0.27.2"
  }
}
